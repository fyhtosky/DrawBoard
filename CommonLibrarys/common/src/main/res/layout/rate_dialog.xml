<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_centerInParent="true"
    android:background="@drawable/rate_dialog_background"
    android:minWidth="260dp"
    android:orientation="vertical"
    android:paddingTop="16dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center">

        <ImageView
            android:id="@+id/rate_image_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:src="@drawable/ic_rate_star_green" />

        <ImageView
            android:id="@+id/rate_image_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:src="@drawable/ic_rate_star_green" />

        <ImageView
            android:id="@+id/rate_image_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:src="@drawable/ic_rate_star_green" />

        <ImageView
            android:id="@+id/rate_image_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:src="@drawable/ic_rate_star_green" />

        <ImageView
            android:id="@+id/rate_image_5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:src="@drawable/ic_rate_star_green" />

    </LinearLayout>

    <TextView
        android:id="@+id/message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:gravity="center"
        android:layout_gravity="center"
        android:lineSpacingExtra="3dp"
        android:lineSpacingMultiplier="1.2"
        android:textColor="@color/rate_dialog_default_text_color"
        android:textSize="16sp"
        tools:text="提示消息提示消息提示消息提示消息提示消息提示消息提示消息提示消息" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Button
            android:id="@+id/go_rate_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="@drawable/rate_dialog_rate_button_background"
            android:gravity="center"
            android:maxLines="1"
            android:padding="10dp"
            android:text="@string/rate_rate_button_title"
            android:textColor="@color/rate_dialog_background_color"
            android:textSize="18sp" />

        <Button
            android:id="@+id/suggestion_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="@drawable/rate_dialog_suggestion_button_background"
            android:gravity="center"
            android:maxLines="1"
            android:padding="10dp"
            android:text="提建议"
            android:textColor="@color/rate_dialog_main_color"
            android:textSize="18sp" />

        <Button
            android:id="@+id/exit_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="@drawable/rate_dialog_cancel_button_background"
            android:gravity="center"
            android:maxLines="1"
            android:padding="10dp"
            android:text="退出程序"
            android:textColor="@color/rate_dialog_default_text_color"
            android:textSize="18sp" />

        <Button
            android:id="@+id/cancel_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="@drawable/rate_dialog_cancel_button_background"
            android:gravity="center"
            android:maxLines="1"
            android:padding="10dp"
            android:text="@string/cancel"
            android:textColor="@color/rate_dialog_default_text_color"
            android:textSize="18sp" />
    </LinearLayout>
</LinearLayout>