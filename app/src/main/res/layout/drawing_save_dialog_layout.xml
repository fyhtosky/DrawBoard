<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:minWidth="290dp"
    >


    <ImageView
        android:id="@+id/iv_save_dialog_close"
        android:padding="5dp"
        android:src="@drawable/ic_gb"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_gravity="top|center_horizontal"
        />


    <RelativeLayout
        android:layout_gravity="center_horizontal"
        android:background="@drawable/bg_drawing_save_dialog"
        android:layout_marginTop="55dp"
        android:paddingBottom="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_save_dialog_share"
            android:src="@drawable/fenxiang_icon"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="8dp"
            android:layout_marginRight="8dp"
            android:padding="8dp"
            android:layout_width="45dp"
            android:layout_height="45dp" />

        <ImageView
            android:id="@+id/iv_save_dialog_icon"
            android:src="@drawable/ic_bccg"
            android:layout_below="@+id/iv_save_dialog_share"
            android:layout_marginTop="10dp"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_save_dialog_title"
            android:text="保存成功~"
            android:textSize="17sp"
            android:textColor="#333333"
            android:layout_below="@+id/iv_save_dialog_icon"
            android:layout_marginTop="10dp"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


        <LinearLayout
            android:layout_below="@+id/tv_save_dialog_title"
            android:layout_marginTop="30dp"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:maxHeight="35dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/bt_save_dialog_rate"
                android:text="去评分"
                android:textSize="12sp"
                android:textColor="#FE8C8C"
                android:background="@drawable/ic_qd_bg"
                android:layout_width="wrap_content"
                android:layout_height="35dp" />

            <Button
                android:id="@+id/bt_save_dialog_to_work"
                android:text="去画本"
                android:textSize="12sp"
                android:textColor="#6B7FFE"
                android:layout_marginLeft="50dp"
                android:background="@drawable/ic_qd_bg"
                android:layout_width="wrap_content"
                android:layout_height="35dp" />

        </LinearLayout>

    </RelativeLayout>

</FrameLayout>