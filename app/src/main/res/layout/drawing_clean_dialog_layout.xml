<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@drawable/bg_drawing_save_dialog"
    android:gravity="center"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:minWidth="290dp"
    android:paddingBottom="20dp"
    >

    <ImageView
        android:src="@drawable/ic_ccsh"
        android:layout_marginTop="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tv_clean_dialog_title"
        android:textColor="#333333"
        android:textSize="17sp"
        android:text="确定擦除手绘 ？"
        android:layout_marginTop="20dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


    <LinearLayout
        android:layout_marginTop="30dp"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:maxHeight="35dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/bt_clean_dialog_cancel"
            android:text="取消"
            android:textSize="12sp"
            android:textColor="#FE8C8C"
            android:background="@drawable/ic_qd_bg"
            android:layout_width="wrap_content"
            android:layout_height="35dp" />

        <Button
            android:id="@+id/bt_clean_dialog_ok"
            android:text="确定"
            android:textSize="12sp"
            android:textColor="#6B7FFE"
            android:layout_marginLeft="50dp"
            android:background="@drawable/ic_qd_bg"
            android:layout_width="wrap_content"
            android:layout_height="35dp" />

    </LinearLayout>


</LinearLayout>