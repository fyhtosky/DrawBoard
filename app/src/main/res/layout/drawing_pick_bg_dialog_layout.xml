<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@drawable/bg_drawing_save_dialog"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:minWidth="290dp"
    android:paddingBottom="20dp"
    >

    <TextView
        android:textSize="17sp"
        android:textColor="#333333"
        android:text="选择背景"
        android:gravity="center"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


    <TextView
        android:id="@+id/tv_pick_dialog_album"
        android:textSize="15sp"
        android:textColor="#333333"
        android:drawablePadding="15dp"
        android:drawableLeft="@drawable/ic_xj"
        android:text="从相册中选择"
        android:gravity="center_vertical|left"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="10dp"
        android:padding="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


    <TextView
        android:id="@+id/tv_pick_dialog_camera"
        android:textSize="15sp"
        android:textColor="#333333"
        android:drawablePadding="15dp"
        android:drawableLeft="@drawable/ic_xc"
        android:text="使用相机拍摄"
        android:gravity="center_vertical|left"
        android:padding="5dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


    <Button
        android:id="@+id/bt_pick_dialog_cancel"
        android:text="取消"
        android:layout_gravity="end"
        android:textSize="12sp"
        android:textColor="#FE8C8C"
        android:layout_marginTop="20dp"
        android:layout_marginRight="30dp"
        android:background="@drawable/ic_qd_bg"
        android:layout_width="wrap_content"
        android:layout_height="35dp" />


</LinearLayout>