            android:background="@color/colorClear"/>

        <ImageButton
            android:id="@+id/btn_scene10"
            android:onClick="scenesChooseClick"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/yingsiganlanqiu"
            android:background="@color/colorClear"/>

        <ImageButton
            android:id="@+id/btn_scene11"
            android:onClick="scenesChooseClick"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
