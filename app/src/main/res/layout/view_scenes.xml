            android:id="@+id/btn_scene6"
            android:onClick="scenesChooseClick"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/mizige"
            android:background="@color/colorClear"/>

        <ImageButton
            android:id="@+id/btn_scene7"
            android:onClick="scenesChooseClick"
            android:layout_width="0dp"
            android:layout_height="match_parent"
