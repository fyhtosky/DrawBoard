            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/heibai"
            android:background="@color/colorClear"/>

        <ImageButton
            android:id="@+id/btn_scene2"
            android:onClick="scenesChooseClick"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/danhuang"
            android:background="@color/colorClear"/>

        <ImageButton
            android:id="@+id/btn_scene3"
            android:onClick="scenesChooseClick"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
