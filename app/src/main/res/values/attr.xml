<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="ScrollPickerView">
        <attr name="spv_min_text_size" format="dimension"/>
        <attr name="spv_max_text_size" format="dimension"/>
        <attr name="spv_start_color" format="color"/>
        <attr name="spv_end_color" format="color"/>
        <attr name="spv_center_item_background" format="color"/>
        <attr name="spv_visible_item_count" format="integer"/>
        <!-- 中间item的位置,默认为 mVisibleItemCount / 2-->
        <attr name="spv_center_item_position" format="integer"/>
        <!-- 是否循环滚动，默认为true，开启-->
        <attr name="spv_is_circulation" format="boolean"/>
        <!-- 不允许父组件拦截触摸事件，设置为true为不允许拦截，此时该设置才生效 -->
        <attr name="spv_disallow_intercept_touch" format="boolean"/>
    </declare-styleable>


    <declare-styleable name="CalendarView">
        <attr name="titleBarColor" format="color"/>
        <attr name="titleTextColor" format="color"/>
        <attr name="title" format="string"/>
        <attr name="dateTitleColor" format="color"/>
        <attr name="dateLeftImage" format="reference"/>
        <attr name="dateRightImage" format="reference"/>
        <attr name="dayItemColor" format="color"/>
        <attr name="daySelectItemImage" format="reference"/>
        <attr name="doneButtonBackground" format="color"/>
        <attr name="doneButtonRadius" format="float"/>
        <attr name="doneButtonText" format="string"/>
        <attr name="doneButtonTextColor" format="color"/>
    </declare-styleable>

    <declare-styleable name="RoundTextView">
        <attr name="round_tv_color" format="color"/>
        <attr name="round_tv_corner_size" format="dimension"/>
    </declare-styleable>
</resources>